<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oakridge.financial.TransactionHistoryController"
      style="-fx-background-color: #4D0017; -fx-padding: 40;"
      prefHeight="600.0" prefWidth="850.0">

    <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-border-color: #8B002B; -fx-border-width: 0 0 2 0; -fx-padding: 0 0 15 0;">
        <Label text="Account Transaction History"
               style="-fx-text-fill: #E0E0E0; -fx-font-size: 32px; -fx-font-weight: 900;">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>
        <Label text="Viewing transactions for your primary account."
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 16px;">
        </Label>
    </VBox>

    <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS"
               style="-fx-base: #6A0520; -fx-control-inner-background: #4D0017; -fx-table-cell-border-color: #8B002B; -fx-text-fill: #E0E0E0; -fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="180"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
            <TableColumn fx:id="amountColumn" text="Amount (P)" prefWidth="140"/>
            <TableColumn fx:id="balanceColumn" text="New Balance (P)" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Back to Dashboard"
                mnemonicParsing="false"
                onAction="#handleBackAction"
                style="-fx-background-color: #C0C0C0;
                       -fx-text-fill: #4D0017;
                       -fx-font-size: 16px;
                       -fx-padding: 10 20;
                       -fx-font-weight: bold;
                       -fx-border-radius: 5;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"
                prefWidth="200.0" />
    </HBox>
</VBox>