<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="MainController"  style="-fx-background-color: #4D0017; -fx-padding: 60 40 40 40;"
      prefHeight="450.0" prefWidth="650.0">

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="Oakridge Financial"
               style="-fx-text-fill: #E0E0E0; -fx-font-size: 38px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.0, 0, 1);" >
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>
        <Label text="Your Future. Secured."
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 18px; -fx-font-weight: 500;">
        </Label>
    </VBox>

    <HBox alignment="CENTER" spacing="40.0">

        <Button fx:id="loginButton"  text="Log In Securely"
                mnemonicParsing="false"
                onAction="#handleLoginButtonAction" style="-fx-background-color: #C0C0C0; 
                       -fx-text-fill: #4D0017; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 50 15 50; 
                       -fx-font-weight: bold;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0.2, 0, 4);"
                prefWidth="220.0" />

        <Button fx:id="createAccountButton"  text="Create New Account"
                mnemonicParsing="false"
                onAction="#handleCreateAccountButtonAction" style="-fx-background-color: transparent; 
                       -fx-text-fill: #C0C0C0; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 50 15 50; 
                       -fx-font-weight: bold;
                       -fx-border-color: #C0C0C0;
                       -fx-border-width: 2;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="220.0" />
    </HBox>

    <VBox.margin>
        <Insets top="10.0" />
    </VBox.margin>

</VBox>