<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: #4D0017;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.NewAccountController">
   <children>
      <Label text="New Account Setup" textFill="#E0E0E0">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Label>

      <Label text="Which type of account would you like to create?" textFill="#A0A0A0">
         <font>
            <Font size="17.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>

      <Button mnemonicParsing="false" onAction="#handleSavingsAccountCreation" prefHeight="70.0" prefWidth="350.0" text="1. Savings Account">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
         <style>
            -fx-background-color: #C0C0C0; 
            -fx-text-fill: #4D0017;
            -fx-font-weight: bold;
            -fx-background-radius: 8;
            -fx-cursor: hand;
            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0.2, 0, 4);
         </style>
      </Button>

      <Button mnemonicParsing="false" onAction="#handleCurrentAccountCreation" prefHeight="70.0" prefWidth="350.0" text="2. Current Account">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
         <style>
            -fx-background-color: #C0C0C0; 
            -fx-text-fill: #4D0017;
            -fx-font-weight: bold;
            -fx-background-radius: 8;
            -fx-cursor: hand;
            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0.2, 0, 4);
         </style>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Button>
      
      <Button mnemonicParsing="false" onAction="#handleBack" text="&lt; Back to Main Menu">
         <style>
            -fx-background-color: transparent;
            -fx-text-fill: #C0C0C0;
            -fx-font-weight: bold;
            -fx-border-color: #C0C0C0;
            -fx-border-width: 2;
            -fx-border-radius: 8;
            -fx-background-radius: 8;
            -fx-padding: 12 30 12 30;
            -fx-cursor: hand;
            -fx-font-size: 16px;
         </style>
      </Button>
      
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="20.0" />
   </padding>
</VBox>