<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oakridge.financial.TransferController"
      style="-fx-background-color: #4D0017; -fx-padding: 60 40 40 40;"
      prefHeight="520.0" prefWidth="650.0">

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="Fund Transfer"
               style="-fx-text-fill: #E0E0E0; -fx-font-size: 38px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.0, 0, 1);" >
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>
        <Label text="Move funds between two accounts in Pula (P)."
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 16px;">
        </Label>
    </VBox>

    <GridPane alignment="CENTER" hgap="20" vgap="25">
        <padding><Insets top="30" right="20" bottom="30" left="20"/></padding>

        <Label text="Transfer FROM Account:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 16px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="fromAccountField" promptText="Your Account Number (e.g., 1001)"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;"
                   prefWidth="300" />

        <Label text="Transfer TO Account:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 16px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="toAccountField" promptText="Recipient Account Number"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;"
                   prefWidth="300" />

        <Label text="Amount to Transfer (P):"
               GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 16px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="amountField" promptText="Enter amount (e.g., 1000.00)"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;"
                   prefWidth="300" />
    </GridPane>

    <HBox alignment="CENTER" spacing="30.0">

        <Button text="Confirm Transfer"
                mnemonicParsing="false"
                onAction="#handleTransferAction"
                style="-fx-background-color: #C0C0C0;
                       -fx-text-fill: #4D0017;
                       -fx-font-size: 16px;
                       -fx-padding: 12 40 12 40;
                       -fx-font-weight: bold;
                       -fx-border-radius: 8;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0.2, 0, 4);"
                prefWidth="220.0" />

        <Button text="Back to Dashboard"
                mnemonicParsing="false"
                onAction="#handleBackAction"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #C0C0C0;
                       -fx-font-size: 16px;
                       -fx-padding: 12 40 12 40;
                       -fx-font-weight: bold;
                       -fx-border-color: #C0C0C0;
                       -fx-border-width: 2;
                       -fx-border-radius: 8;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="220.0" />
    </HBox>

</VBox>