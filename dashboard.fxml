<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="750.0" spacing="25.0" style="-fx-background-color: #4D0017; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardController">

    <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-border-color: #8B002B; -fx-border-width: 0 0 2 0; -fx-padding: 0 0 15 0;">
        <Label fx:id="welcomeLabel" style="-fx-text-fill: #E0E0E0; -fx-font-size: 32px; -fx-font-weight: 900;" text="Welcome, [Customer Name]!">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>
        <Label style="-fx-text-fill: #A0A0A0; -fx-font-size: 16px;" text="Your secure banking dashboard.">
        </Label>
    </VBox>

    <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-padding: 20 0 20 0;">
        <Label style="-fx-text-fill: #C0C0C0; -fx-font-size: 18px; -fx-font-weight: bold;" text="Primary Account Balance">
        </Label>
        <Label fx:id="primaryBalanceLabel" style="-fx-text-fill: #39FF14; -fx-font-size: 48px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.0, 0, 1);" text="P 0.00">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>
        <Label style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;" text="Primary Account: #1001 (Savings)">
        </Label>
    </VBox>

    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20 0 20 0;">

        <Button mnemonicParsing="false" onAction="#handleDepositAction" prefHeight="56.0" prefWidth="164.0" style="-fx-background-color: #C0C0C0;                         -fx-text-fill: #4D0017;                         -fx-font-size: 16px;                         -fx-padding: 15 25;                         -fx-font-weight: bold;                        -fx-border-radius: 8;                         -fx-background-radius: 8;                        -fx-cursor: hand;" text="Deposit " />

        <Button mnemonicParsing="false" onAction="#handleWithdrawAction" prefWidth="140.0" style="-fx-background-color: #C0C0C0;                         -fx-text-fill: #4D0017;                         -fx-font-size: 16px;                         -fx-padding: 15 25;                         -fx-font-weight: bold;                        -fx-border-radius: 8;                         -fx-background-radius: 8;                        -fx-cursor: hand;" text="Withdraw " />

        <Button mnemonicParsing="false" onAction="#handleTransferAction" prefWidth="140.0" style="-fx-background-color: #C0C0C0;                         -fx-text-fill: #4D0017;                         -fx-font-size: 16px;                         -fx-padding: 15 25;                         -fx-font-weight: bold;                        -fx-border-radius: 8;                         -fx-background-radius: 8;                        -fx-cursor: hand;" text="Transfer" />
                
        <Button mnemonicParsing="false" onAction="#handleHistoryAction" prefWidth="166.0" style="-fx-background-color: #C0C0C0;                         -fx-text-fill: #4D0017;                         -fx-font-size: 16px;                         -fx-padding: 15 25;                         -fx-font-weight: bold;                        -fx-border-radius: 8;                         -fx-background-radius: 8;                        -fx-cursor: hand;" text="View History" />
    </HBox>
    
    <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
        <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleLogoutAction" style="-fx-background-color: transparent;                         -fx-text-fill: #C0C0C0;                         -fx-font-size: 16px;                         -fx-padding: 10 20;                         -fx-font-weight: bold;                        -fx-border-color: #C0C0C0;                        -fx-border-width: 1;                        -fx-border-radius: 5;                         -fx-background-radius: 5;                        -fx-cursor: hand;" text="Log Out" VBox.margin="$x1">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
