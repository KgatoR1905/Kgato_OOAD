<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oakridge.financial.DashboardController"
      style="-fx-background-color: #4D0017; -fx-padding: 40;"
      prefHeight="550.0" prefWidth="750.0">

    <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-border-color: #8B002B; -fx-border-width: 0 0 2 0; -fx-padding: 0 0 15 0;">
        <Label fx:id="welcomeLabel"
               text="Welcome, [Customer Name]!"
               style="-fx-text-fill: #E0E0E0; -fx-font-size: 32px; -fx-font-weight: 900;">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>
        <Label text="Your secure banking dashboard."
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 16px;">
        </Label>
    </VBox>

    <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-padding: 20 0 20 0;">
        <Label text="Primary Account Balance"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 18px; -fx-font-weight: bold;">
        </Label>
        <Label fx:id="primaryBalanceLabel"
               text="P 0.00"
               style="-fx-text-fill: #39FF14; -fx-font-size: 48px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.0, 0, 1);">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>
        <Label text="Primary Account: #1001 (Savings)"
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 14px;">
        </Label>
    </VBox>

    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20 0 20 0;">

        <Button text="Deposit Funds"
                mnemonicParsing="false"
                onAction="#handleDepositAction"
                style="-fx-background-color: #C0C0C0; 
                       -fx-text-fill: #4D0017; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 25; 
                       -fx-font-weight: bold;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="140.0" />

        <Button text="Withdraw Cash"
                mnemonicParsing="false"
                onAction="#handleWithdrawAction"
                style="-fx-background-color: #C0C0C0; 
                       -fx-text-fill: #4D0017; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 25; 
                       -fx-font-weight: bold;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="140.0" />

        <Button text="Transfer Money"
                mnemonicParsing="false"
                onAction="#handleTransferAction"
                style="-fx-background-color: #C0C0C0; 
                       -fx-text-fill: #4D0017; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 25; 
                       -fx-font-weight: bold;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="140.0" />
                
        <Button text="View History"
                mnemonicParsing="false"
                onAction="#handleHistoryAction"
                style="-fx-background-color: #C0C0C0; 
                       -fx-text-fill: #4D0017; 
                       -fx-font-size: 16px; 
                       -fx-padding: 15 25; 
                       -fx-font-weight: bold;
                       -fx-border-radius: 8; 
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="140.0" />
    </HBox>
    
    <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
        <Button text="Log Out"
                mnemonicParsing="false"
                onAction="#handleLogoutAction"
                style="-fx-background-color: transparent; 
                       -fx-text-fill: #C0C0C0; 
                       -fx-font-size: 16px; 
                       -fx-padding: 10 20; 
                       -fx-font-weight: bold;
                       -fx-border-color: #C0C0C0;
                       -fx-border-width: 1;
                       -fx-border-radius: 5; 
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"
                alignment="CENTER_RIGHT"
                VBox.margin="$x1">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>