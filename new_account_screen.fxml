<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="NewAccountController"
      style="-fx-background-color: #4D0017; -fx-padding: 60 40 40 40;"
      prefHeight="550.0" prefWidth="650.0">

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="New Customer Registration"
               style="-fx-text-fill: #E0E0E0; -fx-font-size: 36px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0.0, 0, 1);" >
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <Label text="Set up your secure login and open your first account."
               style="-fx-text-fill: #A0A0A0; -fx-font-size: 16px; -fx-font-weight: 500;">
        </Label>
    </VBox>

    <GridPane alignment="CENTER" hgap="20" vgap="15">
        <padding><Insets top="30" right="20" bottom="30" left="20"/></padding>

        <Label text="Full Name:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 14px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="fullNameField" promptText="Your Legal Name"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                   prefWidth="280.0" />

        <Label text="Desired Username:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 14px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="usernameField" promptText="Choose a unique username"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                   prefWidth="280.0" />

        <Label text="Password:"
               GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 14px; -fx-font-weight: bold;">
        </Label>
        <PasswordField fx:id="passwordField" promptText="Set a secure password"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                       prefWidth="280.0" />

        <Label text="Initial Account Type:"
               GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 14px; -fx-font-weight: bold;">
        </Label>
        <ComboBox fx:id="accountTypeComboBox" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3"
                  promptText="Select Type"
                  style="-fx-background-color: #C0C0C0; -fx-text-fill: #4D0017; -fx-border-radius: 5; -fx-background-radius: 5;"
                  prefWidth="280.0" />
                  
        <Label text="Initial Deposit ($):"
               GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-text-fill: #C0C0C0; -fx-font-size: 14px; -fx-font-weight: bold;">
        </Label>
        <TextField fx:id="initialDepositField" promptText="Min P1.00"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"
                   style="-fx-background-color: #6A0520; -fx-text-fill: #E0E0E0; -fx-prompt-text-fill: #A0A0A0; -fx-border-color: #8B002B; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                   prefWidth="280.0" />

    </GridPane>

    <HBox alignment="CENTER" spacing="30.0">
        
        <Button fx:id="registerButton" text="Register &amp; Open Account"
                mnemonicParsing="false"
                onAction="#handleRegisterAction"
                style="-fx-background-color: #C0C0C0;
                       -fx-text-fill: #4D0017;
                       -fx-font-size: 16px;
                       -fx-padding: 12 30 12 30;
                       -fx-font-weight: bold;
                       -fx-border-radius: 8;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 15, 0.2, 0, 4);"
                prefWidth="260.0" />

        <Button fx:id="backToLoginButton" text="Cancel"
                mnemonicParsing="false"
                onAction="#handleBackToLoginAction"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #C0C0C0;
                       -fx-font-size: 16px;
                       -fx-padding: 12 30 12 30;
                       -fx-font-weight: bold;
                       -fx-border-color: #C0C0C0;
                       -fx-border-width: 2;
                       -fx-border-radius: 8;
                       -fx-background-radius: 8;
                       -fx-cursor: hand;"
                prefWidth="120.0" />
    </HBox>

</VBox>